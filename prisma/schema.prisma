datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Seller {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String
  adress    String
  cell      String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  mail      String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  price     Float
  detail    String
  category  String
  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id               Int      @id @default(autoincrement())
  owner            String
  product          String
  quantity_product String
  total            String
  time_order       DateTime? @default(now())
  time_exit        DateTime? @default(now())
  createAt         DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
